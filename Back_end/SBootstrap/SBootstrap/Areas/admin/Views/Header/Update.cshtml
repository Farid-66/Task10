@model Setting
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-5">
                <form asp-area="admin" asp-controller="Header" asp-action="Update" method="post" enctype="multipart/form-data">
                    
                    <div class="mb-3">
                        <label asp-for="@Model.Title" class="form-label">Title</label>
                        <input class="form-control" asp-for="@Model.Title" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="@Model.Substring" class="form-label">Substring</label>
                        <input class="form-control" asp-for="@Model.Substring" />
                    </div>
                    <input asp-for="@Model.Id" hidden />

                    <div class="btns mb-4">
                        <button type="submit" class="btn btn-warning btn-circle" title="Edit">
                            <i class="far fa-edit"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

